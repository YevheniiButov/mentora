    }
  ],
  
  "categories": [
    "education",
    "medical",
    "training",
    "productivity"
  ],
  
  "shortcuts": [
    {
      "name": "Learning Map",
      "short_name": "Learn",
      "description": "Access your personalized learning path",
      "url": "/learning-map",
      "icons": [
        {
          "src": "/static/images/shortcut-learn.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Practice Tests",
      "short_name": "Tests", 
      "description": "Take practice exams and assessments",
      "url": "/tests",
      "icons": [
        {
          "src": "/static/images/shortcut-test.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Virtual Patients",
      "short_name": "Patients",
      "description": "Practice with virtual patient scenarios", 
      "url": "/virtual-patient",
      "icons": [
        {
          "src": "/static/images/shortcut-patient.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Profile",
      "short_name": "Profile",
      "description": "View your progress and settings",
      "url": "/profile", 
      "icons": [
        {
          "src": "/static/images/shortcut-profile.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://dentalacademy.onrender.com/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+dentalacademy",
      "url": "/handle?type=%s"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "handle_links": "preferred",
  
  "offline_enabled": true,
  
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf", ".doc", ".docx"]
        }
      ]
    }
  }
}