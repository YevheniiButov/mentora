# env.example - Пример файла переменных окружения
# Скопируйте этот файл в .env и заполните реальными значениями

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
DATABASE_URL=sqlite:///dental_academy_clean.db
# Для production используйте PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/database_name

# Email Configuration - MailerSend
MAIL_SERVER=smtp.mailersend.net
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-mailersend-username
MAIL_PASSWORD=your-mailersend-password
MAIL_DEFAULT_SENDER=Your App <noreply@yourdomain.com>

# Email Settings
MAIL_SUPPRESS_SEND=false
EMAIL_CONFIRMATION_SALT=your-email-confirmation-salt

# Email Client Configuration (POP/IMAP) - Info Account
POP_HOST=webhost.dynadot.com
POP_PORT=995
POP_USERNAME=info@mentora.com.in
POP_PASSWORD=your-pop-password

IMAP_HOST=webhost.dynadot.com
IMAP_PORT=993
IMAP_USERNAME=info@mentora.com.in
IMAP_PASSWORD=your-imap-password

SMTP_HOST=webhost.dynadot.com
SMTP_PORT=587
SMTP_USERNAME=info@mentora.com.in
SMTP_PASSWORD=your-smtp-password

# Email Client Configuration (POP/IMAP) - Support Account
SUPPORT_POP_HOST=webhost.dynadot.com
SUPPORT_POP_PORT=995
SUPPORT_POP_USERNAME=support@mentora.com.in
SUPPORT_POP_PASSWORD=your-support-pop-password

SUPPORT_IMAP_HOST=webhost.dynadot.com
SUPPORT_IMAP_PORT=993
SUPPORT_IMAP_USERNAME=support@mentora.com.in
SUPPORT_IMAP_PASSWORD=your-support-imap-password

SUPPORT_SMTP_HOST=webhost.dynadot.com
SUPPORT_SMTP_PORT=587
SUPPORT_SMTP_USERNAME=support@mentora.com.in
SUPPORT_SMTP_PASSWORD=your-support-smtp-password

# DigiD Configuration (для production)
DIGID_ENTITY_ID=your-digid-entity-id
DIGID_ACS_URL=https://yourdomain.com/digid/callback
DIGID_SLO_URL=https://yourdomain.com/digid/logout
DIGID_CERTIFICATE_PATH=/path/to/your/certificate.pem
DIGID_PRIVATE_KEY_PATH=/path/to/your/private-key.pem

# DigiD URLs (опционально, есть значения по умолчанию)
DIGID_BASE_URL=https://digid.nl
DIGID_AUTH_URL=https://digid.nl/auth
DIGID_LOGOUT_URL_EXTERNAL=https://digid.nl/logout