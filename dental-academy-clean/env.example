# env.example - Пример файла переменных окружения
# Скопируйте этот файл в .env и заполните реальными значениями

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
DATABASE_URL=sqlite:///dental_academy_clean.db
# Для production используйте PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/database_name

# Email Configuration - MailerSend
MAIL_SERVER=smtp.mailersend.net
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-mailersend-username
MAIL_PASSWORD=your-mailersend-password
MAIL_DEFAULT_SENDER=Your App <noreply@yourdomain.com>

# Email Settings
MAIL_SUPPRESS_SEND=false
EMAIL_CONFIRMATION_SALT=your-email-confirmation-salt

# DigiD Configuration (для production)
DIGID_ENTITY_ID=your-digid-entity-id
DIGID_ACS_URL=https://yourdomain.com/digid/callback
DIGID_SLO_URL=https://yourdomain.com/digid/logout
DIGID_CERTIFICATE_PATH=/path/to/your/certificate.pem
DIGID_PRIVATE_KEY_PATH=/path/to/your/private-key.pem

# DigiD URLs (опционально, есть значения по умолчанию)
DIGID_BASE_URL=https://digid.nl
DIGID_AUTH_URL=https://digid.nl/auth
DIGID_LOGOUT_URL_EXTERNAL=https://digid.nl/logout