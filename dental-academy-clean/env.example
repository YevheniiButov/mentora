# Production Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-production-secret-key-here
DATABASE_URL=postgresql://user:password@localhost/mentora_db

# Server Configuration
BASE_URL=https://bigmentor.nl
SERVER_NAME=bigmentor.nl
PREFERRED_URL_SCHEME=https

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=Mentora <info@bigmentor.nl>
MAIL_SUPPRESS_SEND=false

# Email Provider (smtp or resend)
EMAIL_PROVIDER=smtp
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=Mentora <info@bigmentor.nl>

# reCAPTCHA Configuration
RECAPTCHA_ENABLED=true
RECAPTCHA_PUBLIC_KEY=your-recaptcha-public-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-private-key
RECAPTCHA_DOMAINS=bigmentor.nl,www.bigmentor.nl

# DigiD Configuration (Production)
DIGID_MOCK_MODE=false
DIGID_ENTITY_ID=your-digid-entity-id
DIGID_ACS_URL=https://bigmentor.nl/digid/callback
DIGID_SLO_URL=https://bigmentor.nl/digid/logout
DIGID_CERTIFICATE_PATH=/path/to/digid-certificate.pem
DIGID_PRIVATE_KEY_PATH=/path/to/digid-private-key.pem

# DigiD URLs
DIGID_BASE_URL=https://digid.nl
DIGID_AUTH_URL=https://digid.nl/auth
DIGID_LOGOUT_URL_EXTERNAL=https://digid.nl/logout

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/mentora/app.log

# Email Confirmation
EMAIL_CONFIRMATION_SALT=your-email-confirmation-salt